<Window x:Class="OrdersService.Views.SelectCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdersService.Views"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="SelectCustomerWindow" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" MouseDoubleClick="DataGrid_MouseDoubleClick"/>
    </Grid>
</Window>
